{% extends 'base.html.twig' %}

{% block title %}Trainings
{% endblock %}

{% block body %}

	<div class="d-flex justify-content-between mb-2">
		<a href="{{ path('home_coach')}}" class="btn btn-danger">
			<i class="fas fa-caret-left"></i>
			Retour Espace Coaching</a>
		<a href="{{ path('training_new') }}" class="btn btn-info">Créer une nouvelle seance de Coaching
			<i class="far fa-calendar-plus"></i>
		</a>
	</div>

	<h1>Entraînements</h1>

	<table class="table table-active table-hover">
		<thead>
			<tr>
				<th scope="col">N°</th>
				<th scope="col">Cours</th>
				<th scope="col">Coach</th>
				<th scope="col">Date</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		{% for training in trainings %}
			<tbody>
				<tr class="table table-light">
					<td>{{ training.id }}</td>
					<td>
						<a href="{{ path('training_show',{id: training.id}) }}">
							<strong>{{ training.nom }}</a>
						</strong>
					</td>
					<td>
						<strong>{{ training.coach}}</strong>
					</td>
					<td>
						<strong>{{ training.date ? training.date|date('d/m/Y H:i') : '' }}</strong>
					</td>
					<td>
						<a href="{{ path('training_edit', {'id': training.id}) }}">
							<button type="submit" class="btn btn-info btn-sm rounded mb-2">
								<i class="fas fa-edit"></i>
							</button>
						</a>
						{{ include('training/_delete_form.html.twig') }}</td>
				</tr>
			</tbody>
		{% endfor %}
	</table>
{% endblock %}
